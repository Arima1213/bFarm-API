{
    "openapi": "3.0.0",
    "info": {
        "title": "Product Management API",
        "version": "1.0.0",
        "description": "API for managing product records including images."
    },
    "servers": [
        {
            "url": "http://localhost:8080"
        }
    ],
    "paths": {
        "/api/products/{id}": {
            "get": {
                "summary": "Get Product by ID",
                "description": "Retrieves a product by its ID, including an array of product images.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "ID of the product to retrieve"
                    },
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Authorization token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "name": "Product A",
                                    "description": "A description of Product A",
                                    "price": 100.00,
                                    "created_at": "2024-02-23T12:00:00Z",
                                    "updated_at": "2024-02-24T12:00:00Z",
                                    "images": [
                                        {
                                            "id": 1,
                                            "image_url": "http://example.com/image1.jpg",
                                            "description": "Front view of Product A"
                                        },
                                        {
                                            "id": 2,
                                            "image_url": "http://example.com/image2.jpg",
                                            "description": "Side view of Product A"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized - Invalid token"
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "summary": "Get List of Products",
                "description": "Retrieves a list of all products.",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Authorization token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "id": 1,
                                        "name": "Product A",
                                        "description": "A description of Product A",
                                        "price": 100.00,
                                        "created_at": "2024-02-23T12:00:00Z",
                                        "updated_at": "2024-02-24T12:00:00Z"
                                    },
                                    {
                                        "id": 2,
                                        "name": "Product B",
                                        "description": "A description of Product B",
                                        "price": 150.00,
                                        "created_at": "2024-02-25T12:00:00Z",
                                        "updated_at": "2024-02-26T12:00:00Z"
                                    }
                                ]
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized - Invalid token"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/products/top-sellers": {
            "get": {
                "summary": "Get Top Selling Products",
                "description": "Retrieves a list of top selling products.",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Authorization token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "id": 3,
                                        "name": "Product C",
                                        "description": "A description of Product C",
                                        "price": 200.00,
                                        "created_at": "2024-02-27T12:00:00Z",
                                        "updated_at": "2024-02-28T12:00:00Z"
                                    }
                                ]
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Invalid token"
                    },
                    "403": {
                        "description": "Forbidden - Not allowed to access this resource"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    }
}